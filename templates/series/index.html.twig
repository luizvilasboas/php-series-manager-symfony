{% extends 'base.html.twig' %}

{% block title %}Listagem de séries{% endblock %}

{% block body %}
<div class="container mt-4">
    {% if series is empty %}
        <h1>Não há séries disponíveis.</h1>
        <a href="{{ path('app_series_form') }}" class="btn btn-primary">Adicionar uma nova série</a>
    {% else %}
        <h1>Listagem de séries</h1>
        <a href="{{ path('app_series_form') }}" class="btn btn-primary">Adicionar uma nova série</a>
        <ul class="list-group mt-3">
            {% for serie in series %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    {{ serie.name }}
                    <form method="post" action="{{ path('app_series_delete', {id: serie.id}) }}">
                        <button class="btn btn-sm btn-danger">Deletar</button>
                    </form>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
</div>
{% endblock %}
