{% extends 'base.html.twig' %}

{% block title %}
    Temporadas da série "{{ series.name }}"
{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-3">Temporadas da série "{{ series.name }}"</h1>
    <a href="{{ path('app_series') }}" class="btn btn-secondary">Mostrar listagem das séries</a>
    <ul class="list-group mt-3">
        {% for season in seasons %}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <a href="{{ path('app_episodes', {season: season.id}) }}">Temporada {{ season.number }}</a>
                <span class="badge bg-secondary">
                    {{season.watchedEpisodes|length }} / {{ season.episodes|length }}
                </span>
            </li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
